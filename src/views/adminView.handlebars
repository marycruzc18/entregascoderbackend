<div class="container-fluid">
    <div class="row">
        <header class="bg-dark text-white p-3 d-flex justify-content-between align-items-center">
            <div>
                <h1>Panel de Administrador</h1>
            </div>
            <form action="/logout" method="POST">
                <button class="btn btn-success" type="submit">Logout</button>
            </form> 
        </header>
    </div>
</div>

<table class="table table-bordered table-striped mt-4">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
            <tr>
                <td>{{this.first_name}} {{this.last_name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.role}}</td>
                <td>
                
                    <form action="/users/{{this._id}}/role" method="post" style="display: inline;">
                        <select name="newRole" class="form-select form-select-sm d-inline-block w-auto me-2">
                            <option value="user">user</option>
                            <option value="premium">premium</option>
                        </select>
                        <button type="submit" class="btn btn-warning btn-sm me-1 mt-2">Cambiar Rol</button>
                    </form>

                  
                    <form action="/users/{{this._id}}" method="post" style="display: inline;" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este usuario?');">
                        <button type="submit" class="btn btn-danger btn-sm mt-2">Eliminar</button>
                    </form>
                </td>
            </tr>
        {{else}}
            <tr>
                <td colspan="4">No hay usuarios disponibles.</td>
            </tr>
        {{/each}}
    </tbody>
</table>
