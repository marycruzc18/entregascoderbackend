<div class="container-fluid">
    <div class="row">
        <header class="bg-dark text-white p-3">
            <h1>Bienvenidos al Ecommerce</h1> 
        </header>
    </div>
</div>

<div class="container">
    <h1>Listado de Productos</h1>
    <div class="row">
        {{#each products}}
        <div class="col-md-4">
            <div class="card mb-4">
                <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <p class="card-text"><strong>Precio: ${{this.price}}</strong></p>
                    <!-- Botón para ver detalles del producto -->
                    <a href="/products/{{this._id}}" class="btn btn-primary">Ver detalles</a>
                    <!-- Botón para agregar al carrito -->
                    <form action="/carts/add" method="post" style="display: inline;">
                        <input type="hidden" name="productId" value="{{this._id}}">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-cart-plus"></i> Agregar al carrito
                        </button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="row justify-content-center">
        <p>Página {{pagination.page}} de {{pagination.totalPages}}</p>
        <div class="col-md-4 col-xs-12">
            <nav aria-label="Navigation row">
                <ul class="pagination">
                    {{#if pagination.hasPrevPage}}
                    <li class="page-item"><a class="page-link" href="{{pagination.prevLink}}"><<</a></li>
                    {{else}}
                    <li class="page-item disabled"><a class="page-link" href="{{pagination.prevLink}}"><<</a></li>
                    {{/if}}

                    {{#each pagination.pages}}
                    <li class="page-item"><a class="page-link" href="{{this.url}}?page={{this.number}}">{{this.numberPgBar}}</a></li>
                    {{/each}}

                    {{#if pagination.hasNextPage}}
                    <li class="page-item"><a class="page-link" href="{{pagination.nextLink}}">>></a></li>
                    {{else}}
                    <li class="page-item disabled"><a class="page-link" href="{{pagination.nextLink}}">>></a></li>
                    {{/if}}
                </ul>
            </nav>
        </div>
    </div>
</div>
